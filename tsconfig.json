{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./",
    "strict": false,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "paths": {
      "rb-phys2d": ["src/"],
      "rb-phys2d/*": ["src/"],
      "rb-phys2d-threaded": ["rb-phys2d-threaded/src/"],
      "rb-phys2d-threaded/*": ["rb-phys2d-threaded/src/"],
    }
  },
  "exclude": ["./node_modules", "./threading/node_modules"]
}
